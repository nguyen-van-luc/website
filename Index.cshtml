@model IEnumerable<Doanweb.Models.TbAccount>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <!-- HEADER (GIỐNG MENU) -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold">Quản lý người dùng</h2>
                <p class="text-muted mb-0">Danh sách tài khoản trong hệ thống</p>
            </div>

            <a asp-action="Create" class="btn btn-success px-4">
                ➕ Thêm người dùng
            </a>
        </div>
    </section>

    <!-- CONTENT (GIỐNG MENU) -->
    <section class="content">
        <div class="container-fluid">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-0">

                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Quyền</th>
                                <th>Trạng thái</th>
                                <th class="text-end">Hành động</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int i = 1;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td class="fw-semibold">@item.Username</td>

                                    <td class="text-muted">********</td>

                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>

                                    <td>
                                        <span class="badge bg-info">
                                            @item.Role?.RoleName
                                        </span>
                                    </td>

                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Khóa</span>
                                        }
                                    </td>

                                    <td class="text-end">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.AccountId"
                                           class="btn btn-sm btn-outline-primary mx-1">
                                            ✏️
                                        </a>

                                        <a asp-action="ResetPassword"
                                           asp-route-id="@item.AccountId"
                                           class="btn btn-sm btn-outline-warning mx-1">
                                            🔑
                                        </a>

                                        <form asp-action="ToggleActive"
                                              asp-route-id="@item.AccountId"
                                              method="post"
                                              style="display:inline">
                                            <button class="btn btn-sm btn-outline-danger">
                                                @(item.IsActive == true ? "Khóa" : "Mở")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </section>

</div>

<style>
    .card {
        border-radius: 20px;
    }

    table th, table td {
        vertical-align: middle;
    }
</style>
