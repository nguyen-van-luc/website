@model IEnumerable<Doanweb.Models.TbProduct>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <!-- Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-0">Quản lý sản phẩm</h2>
                <p class="text-muted mb-0">Danh sách sản phẩm trong hệ thống</p>
            </div>

            <a asp-action="Create" class="btn btn-success px-4">
                ➕ Thêm sản phẩm
            </a>
        </div>
    </section>

    <!-- Content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-0">

                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:60px;">#</th>
                                <th>Ảnh</th>
                                <th>Tên SP</th>
                                <th>Danh mục</th>
                                <th>Giá</th>
                                <th>Giá giảm</th>
                                <th>Số lượng</th>
                                <th>Trạng thái</th>
                                <th style="width:160px;" class="text-end">Hành động</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int i = 1;
                            }

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>

                                    <!-- ẢNH -->
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(item.Image))
                                        {
                                            <img src="@Url.Content(item.Image)"
                                                 width="45"
                                                 height="45"
                                                 style="object-fit:cover;border-radius:6px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>

                                    <!-- TÊN -->
                                    <td class="fw-semibold">@item.Title</td>

                                    <!-- DANH MỤC -->
                                    <td class="text-muted">
                                        @(item.CategoryProduct != null ? item.CategoryProduct.Title : "---")
                                    </td>

                                    <!-- GIÁ -->
                                    <td>@item.Price</td>

                                    <!-- GIÁ GIẢM -->
                                    <td>
                                        @if (item.PriceSale > 0)
                                        {
                                            <span class="text-danger fw-semibold">@item.PriceSale</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">---</span>
                                        }
                                    </td>

                                    <!-- SỐ LƯỢNG -->
                                    <td>@item.Quantity</td>

                                    <!-- TRẠNG THÁI -->
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge bg-success">Hiển thị</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Ẩn</span>
                                        }

                                        @if (item.IsNew == true )
                                        {
                                            <span class="badge bg-info ms-1">Mới</span>
                                        }

                                        @if (item.IsBestSeller == true)
                                        {
                                            <span class="badge bg-warning text-dark ms-1">Bán chạy</span>
                                        }
                                    </td>

                                    <!-- HÀNH ĐỘNG -->
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@item.ProductId"
                                           class="btn btn-sm btn-outline-secondary">
                                            👁️
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.ProductId"
                                           class="btn btn-sm btn-outline-primary mx-1">
                                            ✏️
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.ProductId"
                                           class="btn btn-sm btn-outline-danger">
                                            🗑️
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </section>
</div>

<style>
    .card {
        border-radius: 20px;
    }

    table th, table td {
        vertical-align: middle;
    }
</style>
