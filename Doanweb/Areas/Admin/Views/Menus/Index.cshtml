@model IEnumerable<Doanweb.Models.TbMenu>

@{
    ViewData["Title"] = "Quản lý Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">

    <!-- Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold">Quản lý Menu</h2>
                <p class="text-muted mb-0">Danh sách menu trong hệ thống</p>
            </div>
            <a asp-action="Create" class="btn btn-success px-4">
                ➕ Thêm menu
            </a>
        </div>
    </section>

    <!-- Content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-0">

                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:60px;">#</th>
                                <th>Tiêu đề</th>
                                <th>Alias</th>
                                <th style="width:80px;">Cấp</th>
                                <th style="width:80px;">Vị trí</th>
                                <th style="width:100px;">Trạng thái</th>
                                <th style="width:160px;" class="text-end">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td class="text-muted">@item.Alias</td>
                                    <td>@item.Levels</td>
                                    <td>@item.Position</td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge bg-success">Hiển thị</span>
                                        }
                                        else if (item.IsActive == false)
                                        {
                                            <span class="badge bg-secondary">Ẩn</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">N/A</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@item.MenuId"
                                           class="btn btn-sm btn-outline-secondary">
                                            👁️
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MenuId"
                                           class="btn btn-sm btn-outline-primary mx-1">
                                            ✏️
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MenuId"
                                           class="btn btn-sm btn-outline-danger">
                                            🗑️
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </section>
</div>

<style>
    .card {
        border-radius: 20px;
    }

    table th, table td {
        vertical-align: middle;
    }
</style>
